<nav class="navbar navbar-tripselector fixed-top" data-controller="navbar" data-navbar-target="navcontainer" data-action="scroll@window->navbar#update">
  <div class="container-fluid">
    <%# start of left side %>
          <%= link_to "/", class: "navbar-brand" do %>
            <%= image_tag "tripselector-logo.svg", class:"navbar-logo" %>
          <% end %>
    <%# end of left side %>
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbar" aria-controls="navbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="offcanvas offcanvas-end navbar-offcanvas-open" tabindex="-1" id="navbar" aria-labelledby="navbarLabel">
      <div class="offcanvas-header">
        <h2 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menu</h2>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body pt-0">
        <div class="d-flex align-items-center">
          <ul class="navbar-nav flex-grow-1">
            <li class="menu-item nav-item">
              <%= link_to "Home", "/", class: "nav-link" %>
            </li>
            <% if user_signed_in? %>
              <li class="menu-item nav-item d-flex" style="align-items:center; justify-content:space-between;">
                <%= link_to "My Profile", profile_path, class: "text-decoration-none nav-link" %>
              </li>
              <li class="menu-item nav-item">
                <%= link_to "Dashboard", dashboard_path, class: "text-decoration-none nav-link" %>
              </li>
              <li class="menu-item nav-item">
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "text-decoration-none nav-link" %>
              </li>
          </ul>
          <% if current_user.photo.attached? %>
            <%= image_tag asset_path("ajavatar.jpg"), class: "avatar-menu avatar dropdown-toggle", id: "navbarDropdown" %>
            <%# <%= cl_image_tag current_user.photo.key, height: 50, width: 50, crop: :thumb, class: "avatar dropdown-toggle", id: "navbarDropdown" %>
          <% else %>
            <%= image_tag asset_path("ajavatar.jpg"), class: "avatar-menu avatar dropdown-toggle", id: "navbarDropdown" %>
            <%# <%= image_tag "https://www.pngall.com/wp-content/uploads/5/Profile-Avatar-PNG-Free-Download.png", size: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
        </div>
          <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-light" %>
          </li>
          <% end %>

        </ul>
      </div>
    </div>
  </div>
</nav>
