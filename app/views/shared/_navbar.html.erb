<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">

      <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "logo.png", style:"width: 10%;", class:"m-0", id: "image_space" %>
        <span class="navbar-text text-dark">
            Trips Selector
          </span>
      <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="right-side-buttons-nav collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "/", class: "hdp-text nav-link text-dark" %>
          </li>
          <li class="nav-item">
            <%= link_to "Dashboard", dashboard_path, class: "hdp-text nav-link text-dark" %>
          </li>
          <li class="nav-item">
            <%= link_to "Profile", profile_path, class: "hdp-text nav-link text-dark", id: "profile-text" %>
          </li>
          <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
          <button style="border: none; background-color: transparent;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <%# <%= cl_image_tag current_user.photo.key, height: 50, width: 50, crop: :thumb, class: "avatar dropdown-toggle", id: "navbarDropdown" %>
          <%= image_tag asset_path("RH.jpeg"), height: 50, width: 50, crop: :thumb, class: "avatar dropdown-toggle", id: "navbarDropdown" %>
          </button>
          <% else %>
          <%= image_tag asset_path("RH.jpeg"), height: 50, width: 50, crop: :thumb, class: "avatar dropdown-toggle", id: "navbarDropdown" %>
            <%# <%= image_tag "https://www.pngall.com/wp-content/uploads/5/Profile-Avatar-PNG-Free-Download.png", size: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
