              <%= button_to raw('<h1>Try Again</h1>'), journeys_create_new_path, method: :post , class:"btn btn-ref"%>
            <%# </div> %>
          </div>
        <% end %>
      </div>
      <%= render "journeys/mapbox", markers: markers %>
    </div>
